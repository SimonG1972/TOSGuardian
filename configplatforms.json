{
  "$schema": "https://example.com/tosguardian/platforms.schema.json",
  "default": {
    "smallPayloadCutoffBytes": 1300,
    "image": {
      "minBytes": 1024,
      "maxBytes": 10485760,
      "minWidth": 200,
      "minHeight": 200,
      "minAspectRatio": 0.5,
      "maxAspectRatio": 2.5
    },
    "signatureValidation": {
      "allowMime": ["image/jpeg", "image/png", "image/webp", "image/gif"],
      "blockMime": []
    },
    "urlHeuristics": {
      "blockTerms": [
        "nsfw",
        "gore",
        "blood",
        "shoot",
        "replica",
        "counterfeit"
      ],
      "maxQueryParams": 20
    },
    "oddity": {
      "maxWeirdExtensions": 1,
      "maxFilenameEntropy": 5.0
    }
  },
  "instagram": {
    "image": {
      "minWidth": 320,
      "minHeight": 320,
      "minAspectRatio": 0.8,
      "maxAspectRatio": 1.91
    }
  },
  "facebook": {
    "image": {
      "minWidth": 200,
      "minHeight": 200
    }
  },
  "tiktok": {
    "image": {
      "minAspectRatio": 0.56,
      "maxAspectRatio": 1.91
    }
  },
  "pinterest": {
    "image": {
      "minWidth": 236,
      "minHeight": 236,
      "minAspectRatio": 0.4,
      "maxAspectRatio": 3.0
    }
  },
  "etsy": {
    "image": {
      "minWidth": 1000,
      "minHeight": 1000
    }
  },
  "x": {
    "image": {
      "minWidth": 200,
      "minHeight": 200,
      "minAspectRatio": 0.5,
      "maxAspectRatio": 2.0
    }
  }
}
